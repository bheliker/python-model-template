# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.sh]
end_of_line = lf

[*.bat]
charset = latin1
end_of_line = crlf
